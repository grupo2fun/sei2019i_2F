<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".Presentation.loginUserActivity">

    <EditText
        android:id="@+id/Lpassword"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="#FF5252"
        android:textColorHint="#FF5252"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="236dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textColor="#FF5252"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FF5252"
        android:textColorLink="#00FF5252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="288dp"
        android:backgroundTint="@color/mainColor"
        android:text="Registro"
        android:textColor="#FF5252"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="364dp"
        android:backgroundTint="@color/mainColor"
        android:text="Entrar"
        android:textColor="#FF5252"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="193dp"
        android:layout_height="432dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535"
        app:srcCompat="@drawable/main_image" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="8dp"
        android:text="INICIAR SESION"
        android:textColor="#FF5252"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>